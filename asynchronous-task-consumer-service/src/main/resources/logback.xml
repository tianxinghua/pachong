<configuration>
	<property name="LOG_HOME" value="/usr/local/share/applications/asynchronous-task-consumer-service/logs/" />  
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%-5level] %d{HH:mm:ss.SSS} [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE_ERROR"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
       	<filter class="ch.qos.logback.classic.filter.LevelFilter"><!-- 级别过滤器，根据日志级别进行过滤。NEUTRAL会传递给下一个只打印错误日志 -->
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<file>${LOG_HOME}/shangpin-asynchronous-task-consumer-service-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/shangpin-asynchronous-task-consumer-service-error.%d{yyyy-MM-dd}.log</fileNamePattern>
             <MaxHistory>1</MaxHistory>
        </rollingPolicy>
       <encoder>
            <pattern>[%-5level] %d{HH:mm:ss.SSS} [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE_INFO"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">   <!-- 临界值过滤器，过滤掉低于指定临界值的日志，NEUTRAL会传递给下一个 -->
			<!--<level>INFO</level>-->
		</filter>
		<file>${LOG_HOME}/shangpin-asynchronous-task-consumer-service-info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy" >
            <fileNamePattern>${LOG_HOME}/shangpin-asynchronous-task-consumer-service-info.%d{yyyy-MM-dd}.log</fileNamePattern>
             <MaxHistory>1</MaxHistory>
        </rollingPolicy>
       <encoder>
            <pattern>[%-5level] %d{HH:mm:ss.SSS} [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.shangpin" level="INFO"></logger>
    <logger name="org" level="info"></logger>

    <logger name="com.shangpin.ephub.data.mysql.task.spuimport.mapper" level="debug">
        <appender-ref ref="FILE_INFO" />
    </logger>

    <logger name="com.shangpin.ephub.data.mysql.dictionary.color.mapper.HubColorDicItemMapper" level="debug">
        <appender-ref ref="FILE_INFO" />
    </logger>

	<logger name="com.shangpin" level="DEGUG" ></logger>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE_INFO"/>
    </root>
    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE_ERROR"/>
    </root>
</configuration>