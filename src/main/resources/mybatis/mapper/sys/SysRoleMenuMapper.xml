<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shangpin.spider.mapper.sys.SysRoleMenuMapper" >
  <resultMap id="BaseResultMap" type="com.shangpin.spider.entity.sys.SysRoleMenuKey" >
    <id column="role_id" property="roleId" jdbcType="BIGINT" />
    <id column="menu_id" property="menuId" jdbcType="BIGINT" />
  </resultMap>
  <insert id="insert" parameterType="com.shangpin.spider.entity.sys.SysRoleMenuKey" >
    insert into sys_role_menu (role_id, menu_id)
    values (#{roleId,jdbcType=BIGINT}, #{menuId,jdbcType=BIGINT})
  </insert>
  <insert id="insertSelective" parameterType="com.shangpin.spider.entity.sys.SysRoleMenuKey" >
    insert into sys_role_menu
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="roleId != null" >
        role_id,
      </if>
      <if test="menuId != null" >
        menu_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="roleId != null" >
        #{roleId,jdbcType=BIGINT},
      </if>
      <if test="menuId != null" >
        #{menuId,jdbcType=BIGINT},
      </if>
    </trim>
  </insert>
  
  <delete id="delPerByRoleId">
  	delete from sys_role_menu where role_id = ${roleId}
  </delete>
  <insert id="addPermissionRole" >
    insert into sys_role_menu (role_id, menu_id)
    values (#{roleId}, #{perId})
  </insert>
</mapper>